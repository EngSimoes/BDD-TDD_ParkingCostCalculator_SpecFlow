@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Welcome To The BDD-Parking Cost Calculator</h3>
</div>

<header class="container mt-5">
    <div class="d-flex justify-content-start">
        <div class="d-flex flex-column">
            <p>
                Estimate your parking cost with our convenient parking calculator. <a href="/CostCalculator/">Calculate Now</a>
            </p>
        </div>
        <div class="ml-auto align-self-center">
            <img src="~/images/expand-testing-logo.png" style="max-height:64px" />
        </div>
    </div>
    <hr />
</header>

<br />

<div id="park-cost-carousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/test-automation-pyramid.png" alt="Test Automation Pyramid">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/bdd-quality-amigos.png" alt="BDD | Quality | Amigos">
        </div>
    </div>
    <a class="carousel-control-prev" href="#park-cost-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#park-cost-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>